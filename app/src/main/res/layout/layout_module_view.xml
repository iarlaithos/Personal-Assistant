<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvRecModule"
        android:layout_width="219dp"
        android:layout_height="37dp"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.291"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvRecLocation"
        android:layout_width="219dp"
        android:layout_height="37dp"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:text="Location"
        android:textColor="#000000"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.291"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvRecModule" />

    <TextView
        android:id="@+id/tvRecType"
        android:layout_width="219dp"
        android:layout_height="37dp"
        android:gravity="center"
        android:text="Type"
        android:textColor="#000000"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.291"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvRecLocation" />

    <TextView
        android:id="@+id/tvViewStartTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.205"
        app:layout_constraintStart_toEndOf="@+id/tvRecModule"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvViewEndTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:gravity="center"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.205"
        app:layout_constraintStart_toEndOf="@+id/tvRecType"
        app:layout_constraintTop_toBottomOf="@+id/tvViewStartTime" />

    <ImageView
        android:id="@+id/smallArrow"
        android:layout_width="40dp"
        android:layout_height="37dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvRecModule"
        app:layout_constraintEnd_toEndOf="@+id/tvRecModule"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tvRecModule"
        app:layout_constraintTop_toTopOf="@+id/tvRecModule"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/smallarrow" />

    <ImageView
        android:id="@+id/timeArrow"
        android:layout_width="33dp"
        android:layout_height="53dp"
        android:rotation="180"
        android:rotationX="0"
        app:layout_constraintBottom_toTopOf="@+id/tvViewEndTime"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.281"
        app:layout_constraintStart_toEndOf="@+id/tvRecLocation"
        app:layout_constraintTop_toBottomOf="@+id/tvViewStartTime"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/longarrow" />

</androidx.constraintlayout.widget.ConstraintLayout>